<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/c7aca99b4f.js" crossorigin="anonymous"></script>
  </head>

  <body>

    <header >
      <div class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <!--<div class="row">-->
          <div class=" navbar-brand">
            <%= link_to "Bookers", root_path, class:"navbar-brand" %>
          </div>
          
          <div class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
           
              <% if user_signed_in? %>
                
                <%= link_to user_path(current_user) do %>
                 <p class="nav-link text-light navbar-brand"> <i class="fa-solid fa-house"></i>Home</p>
                <% end %>
                </a>
    
                
                <%= link_to users_path do %>
                  <p class="nav-link text-light navbar-brand"><i class="fa-solid fa-users"></i>Users</p>
                <% end %>
                </a>
    
    
                
                <%= link_to books_path do %>
                  <p class="nav-link text-light navbar-brand"><i class="fa-solid fa-book-open"></i>Books</p>
                <% end %>
                </a>
    
                
                <%= link_to destroy_user_session_path method: :delete do %>
                  <p class="nav-link text-light navbar-brand"><i class="fa-solid fa-right-from-bracket"></i>Log out</p>
                <% end %>
                </a>
    
              <% else %>
              
                
                <%= link_to  root_path do %>
                  <p class="nav-link text-light navbar-brand"><i class="fa-solid fa-house"></i>Home</p>
                <% end %>
                </a>
                
                
    
                
                <%= link_to  about_path do %>
                  <p class="nav-link text-light navbar-brand"><i class="fa-solid fa-link"></i>About</p>
                <% end %>
                </a>
    
                
                <%= link_to new_user_registration_path do %>
                  <p class="nav-link text-light navbar-brand"><i class="fa-solid fa-user-plus"></i>Sign up</P>
                <% end %>
                </a>
    
                
                <%= link_to  new_user_session_path do %>
                  <p class="nav-link text-light navbar-brand"><i class="fa-solid fa-right-to-bracket"></i>Log in</P>
                <% end %>
                </a>
    
              <% end %>
    
              
            </ul>
          </div>
        <!--</div>-->
      </div>
      </div>
      
    </header>

    <%= yield %>


    <footer>
      <div class="container mt-5">
        <div class="row">
    	    <div class="mx-auto">
    		    <p>CopyRight Infratop.inc</p>
    	    </div>
        </div>
       </div>
    </footer>

  </body>

</html>
