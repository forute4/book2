<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/c7aca99b4f.js" crossorigin="anonymous"></script>
  </head>

  <body>

    <header >
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
      <%= link_to "Bookers", homes_top_path, class:"navbar-brand" %>

      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">

          <% if user_signed_in? %>

            
            <a class="nav-link text-light">
            <%= link_to user_path(current_user) do %>
              <i class="fa-solid fa-house"></i>Home
            <% end %>
            </a>

            <a class="nav-link text-light">
            <%= link_to users_path do %>
              <i class="fa-solid fa-users"></i>Users
            <% end %>
            </a>


            <a class="nav-link text-light">
            <%= link_to books_path do %>
              <i class="fa-regular fa-book-open"></i>Books
            <% end %>
            </a>

            <a class="nav-link text-light">
            <%= link_to destroy_user_session_path method: :delete do %>
              <i class="fa-solid fa-right-from-bracket"></i>Log out
            <% end %>
            </a>

          <% else %>
          
            <a class="nav-link text-light">
            <%= link_to  homes_top_path do %>
              <i class="fa-solid fa-house"></i>Home
            <% end %>
            </a>
            
            

            <a class="nav-link text-light">
            <%= link_to  homes_about_path do %>
              <i class="fa-solid fa-paperclip"></i>About
            <% end %>
            </a>

            <a class="nav-link text-light">
            <%= link_to new_user_registration_path do %>
              <i class="fa-solid fa-user-plus"></i>Sign up
            <% end %>
            </a>

            <a class="nav-link text-light">
            <%= link_to  new_user_session_path do %>
              <i class="fa-solid fa-right-to-bracket"></i>Log in
            <% end %>
            </a>

          <% end %>

          </ul>
        </div>
      </div>
      </nav>
    </header>

    <%= yield %>


    <footer>
      <div class="container mt-5">
        <div class="row">
    	    <div class="mx-auto">
    		    <p>CopyRight Infratop.inc</p>
    	    </div>
        </div>
       </div>
    </footer>

  </body>

</html>
