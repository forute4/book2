<div class="containar">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>

          <p>name</p>
          <p>introduction</p>

          <%= link_to edit_user_path(current_user), class: "btn btn-secondary", method: :get do %>
          <i class="fa-solid fa-user-gear"></i>
          <% end %>


      <h1>New Book</h1>
      <%= form_with model: Book.new do |f| %>
       <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Opinion</h4>
        <%= f.text_area :body %>

        <%= f.submit 'Create Book' %>
      <% end %>
    </div>

    <div class="offset-md-1"></div>

    <div class="col-md-8">
      <h1>Books</h1>
      <tr>
        <th>image</th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
      <% @books.each do |book| %>
      <tr>
        <td></td>
        <td><%=link_to "#{book.title}", book_path(book.id) %></td>
        <td><%= book.body %></td>
        
        
      </tr>
      <% end %>
    </div>

  </div>
</div>

