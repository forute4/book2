
<div class="col-md-3">
    <h1>User info</h1>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= user.introduction %></th>
            </tr>
          </tbody>
        </table>

        <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block edit_user_148551", method: :get do %>
        <i class="fa-solid fa-user-gear"></i>
        <% end %>

      <% if book.errors.any? %>
        <%= book.errors.count %>件のエラーが発生しました
        <ul>
          <% book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
        
      <% end %>
      
      <h1>New Book</h1>
      <%= form_with model: Book.new do |f| %>
       <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Opinion</h4>
        <%= f.text_area :body %>

        <%= f.submit 'Create Book', class:"btn btn-success" %>
      <% end %>


</div>