<p id="notice"></p>
<div class="container">
  <div class="row">



    <div class="mx-auto">

      <h2>Editing Book</h2>

      <%= form_with model: @book do |f| %>
      <div class="form-group">
        <p>Title</p>
        <%= f.text_field :title %>
      </div>

      <div class="form-group">
        <p>Opinion</p>
        <%= f.text_area :body %>
      </div>

      <div class="form-group">
        <%= f.submit 'Update Book', class:"btn btn-success" %>
      </div>

      <% end %>

      <%= link_to"Show", book_path %>
      |
      <%= link_to"Back", books_path %>

    </div>
  </div>
</div>